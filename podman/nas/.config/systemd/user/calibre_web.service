[Unit]
Description=Calibre-Web Container
Wants=network-online.target
After=network-online.target

[Service]
Restart=unless-stopped

ExecStart=/usr/bin/podman run \
  --rm \
  --name=calibre_web \
  -e TZ=Asia/Shanghai \
  -e DOCKER_MODS=linuxserver/mods:universal-calibre \
  -e OAUTHLIB_RELAX_TOKEN_SCOPE=1 \
  -p 8083:8083 \
  -v /data/appdata/calibre-web:/config:Z \
  -v /data/books:/books:Z \
  lscr.io/linuxserver/calibre-web:latest

ExecStop=/usr/bin/podman stop -t 10 calibre_web

[Install]
WantedBy=default.target
